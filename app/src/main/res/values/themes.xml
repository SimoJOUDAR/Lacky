<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lackey" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gradient_end_color</item>
        <item name="colorPrimaryVariant">@color/warm_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradient_end_color</item>
        <item name="colorSecondaryVariant">@color/gradient_start_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar. -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Lato_font" parent="">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="Title1" parent="Lato_font">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Title2" parent="Lato_font">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/lato_light_italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tile styles. -->
    <style name="tile_device" parent="">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="tile_specs" parent="Lato_font">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- DeviceSteering styles. -->
    <style name="device_steering_name" parent="">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="device_steering_specs" parent="">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- CircularProgressBar styles. -->
    <style name="CircularProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <!-- MyAccount styles. -->
    <style name="my_account_title" parent="">
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/gradient_end_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="my_account_text_view_topping" parent="">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/light_grey_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">42dp</item>
    </style>

    <style name="card_view" parent="CardView">
        <item name="cornerRadius">4dp</item>
        <item name="cardElevation">12dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="my_account_text_view" parent="">
        <item name="fontFamily">@font/lato_black</item>
        <item name="android:textColor">@color/light_grey_3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="my_account_text_to_display" parent="my_account_text_view">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="my_account_text_address" parent="my_account_text_view">
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
    </style>


</resources>