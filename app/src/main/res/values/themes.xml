<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lackey" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gradient_end_color</item>
        <item name="colorSecondaryVariant">@color/gradient_start_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar. -->
        <item name="android:statusBarColor" >@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Lato_font" parent="">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="Title1" parent="Lato_font">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Title2" parent="Lato_font">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/lato_light_italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tile styles. -->
    <style name="tile_device" parent="">
        <item name="fontFamily">@font/lato</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="tile_specs" parent="Lato_font">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>