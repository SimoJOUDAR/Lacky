<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="rollerShutter"
            type="fr.mjoudar.lackey.domain.models.RollerShutter" />
    </data>

    <FrameLayout
        android:id="@+id/view_rs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warm_blue"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_maya_blue_gradient_radius_corner"
            android:padding="20dp"
            android:layout_margin="48dp">

            <ImageView
                android:id="@+id/device_img_rs"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:contentDescription="@string/roller_shutter"
                android:src="@drawable/roller_shutters"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/device_name_rs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/device_img_rs"
                android:gravity="center"
                tools:text="Device"
                android:text="@{rollerShutter.deviceName}"
                style="@style/device_steering_name" />


            <ProgressBar
                android:id="@+id/progress_bar_rs"
                style="@style/CircularProgressBar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/device_name_rs"
                app:layout_constraintBottom_toTopOf="@id/button_decr_rs"
                tools:progress="60" />

            <TextView
                android:id="@+id/specs_rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_rs"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_rs"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_rs"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_rs"
                tools:text="60%"
                style="@style/device_steering_specs" />

            <Button
                android:id="@+id/button_decr_rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 10%"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button_incr_rs"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_rs"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/button_incr_rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 10%"
                app:layout_constraintStart_toEndOf="@id/button_decr_rs"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_rs"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>