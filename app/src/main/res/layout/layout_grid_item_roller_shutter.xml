<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="rollerShutter"
            type="fr.mjoudar.lackey.domain.models.RollerShutter" />
        <variable
            name="viewModel"
            type="fr.mjoudar.lackey.presentation.homePage.HomePageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_warm_blue_radius_corner"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/device_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/device_image"
            android:src="@drawable/roller_shutters"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/device_img"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            tools:text="Roller shutter"
            android:text="@{rollerShutter.deviceName}"
            style="@style/tile_device"
            />

        <TextView
            android:id="@+id/specs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/device_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="60%"
            intensity="@{rollerShutter.position}"
            style="@style/tile_specs" />

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_delete"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/delete"
            android:layout_margin="8dp"
            android:background="@color/warm_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>