<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="heater"
            type="fr.mjoudar.lackey.domain.models.Heater" />
    </data>

    <FrameLayout
        android:id="@+id/view_heater"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warm_blue"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_maya_blue_gradient_radius_corner"
            android:padding="20dp"
            android:layout_margin="48dp">

            <ImageView
                android:id="@+id/device_img_heater"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:contentDescription="@string/heater"
                android:src="@drawable/heater"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/device_name_heater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/device_img_heater"
                android:gravity="center"
                tools:text="Device"
                android:text="@{heater.deviceName}"
                style="@style/device_steering_name" />

            <TextView
                android:id="@+id/mode_heater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/device_name_heater"
                app:layout_constraintBottom_toTopOf="@id/progress_bar_heater"
                tools:text="On"
                android:text="@{heater.mode.name()}"
                android:layout_margin="12dp"
                style="@style/device_steering_specs" />

            <ProgressBar
                android:id="@+id/progress_bar_heater"
                style="@style/CircularProgressBar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mode_heater"
                app:layout_constraintBottom_toTopOf="@id/button_decr_heater"
                tools:progress="60" />

            <TextView
                android:id="@+id/specs_heater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/progress_bar_heater"
                app:layout_constraintEnd_toEndOf="@+id/progress_bar_heater"
                app:layout_constraintStart_toStartOf="@+id/progress_bar_heater"
                app:layout_constraintTop_toTopOf="@+id/progress_bar_heater"
                tools:text="21°"
                style="@style/device_steering_specs" />

            <Button
                android:id="@+id/button_decr_heater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 0.5°"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/button_incr_heater"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_heater"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/button_incr_heater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+ 0.5°"
                app:layout_constraintStart_toEndOf="@id/button_decr_heater"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/progress_bar_heater"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</layout>